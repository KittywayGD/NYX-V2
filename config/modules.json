{
  "version": "1.0.0",
  "system": {
    "recursive_validation": {
      "enabled": true,
      "max_iterations": 3,
      "min_confidence": 0.85
    },
    "logging": {
      "level": "INFO",
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
  },
  "modules": {
    "Mathematics": {
      "enabled": true,
      "priority": 1,
      "config": {
        "symbolic_engine": "sympy",
        "numerical_precision": 15,
        "timeout": 30
      }
    },
    "Physics": {
      "enabled": true,
      "priority": 1,
      "config": {
        "use_units": true,
        "constants_source": "scipy",
        "domains": [
          "quantum_mechanics",
          "relativity",
          "thermodynamics",
          "electromagnetism"
        ]
      }
    },
    "Electronics": {
      "enabled": true,
      "priority": 1,
      "config": {
        "default_tolerance": 0.05,
        "use_complex_impedance": true
      }
    },
    "ScientificSolver": {
      "enabled": true,
      "priority": 0,
      "config": {
        "auto_domain_detection": true,
        "multi_domain_integration": true
      }
    }
  },
  "capabilities": {
    "mathematics": [
      "algebra",
      "calculus",
      "differential_equations",
      "linear_algebra",
      "optimization"
    ],
    "physics": [
      "quantum_mechanics",
      "relativity",
      "thermodynamics",
      "electromagnetism"
    ],
    "electronics": [
      "circuit_analysis",
      "filters",
      "amplifiers",
      "signal_processing"
    ]
  }
}
